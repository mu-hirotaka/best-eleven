<%= render 'admin/shared/header' %>

<% @title = '選手タイプ一覧' %>
<h1><%= @title %></h1>

<div class="table-wrapper">
  <table class="listing">
    <tr>
      <th>id</th>
      <th>title</th>
      <th>アクション</th>
    </tr>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.id %></td>
        <td><%= type.title %></td>
        <td class="actions">
          <%= link_to '編集', [ :edit, :admin, type ] %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
