<%= render 'admin/shared/header' %>

<% @title = 'ユーザー投稿画像一覧' %>
<h1><%= @title %></h1>

<div class="table-wrapper">
  <%= paginate @images %>
  <table class="listing">
    <tr>
      <th>id</th>
      <th>question_id</th>
      <th>image</th>
      <th>comment</th>
    </tr>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.id %></td>
        <td><%= @question_to_title[image.question_id] %></td>
        <td><%= image_tag(@image_host + image.image_name, :size => '300x400') %></td>
        <td><% if image.comment && image.comment.length > 0 %><td><%= image.comment %></td><% end %></td>
      </tr>
    <% end %>
  </table>
  <%= paginate @images %>
</div>
