<div class="text-center">
  <%= render 'shared/header' %>

  <div class="question-title">
    <p>フォーメーション選択</p>
  </div>

  <div class="question-btn">
  	<ul>
      <% @formations.each do |formation| %>
        <li><button type="button" class="btn btn-lg btn-success formation-each-btn" data-formation-id="<%= formation.id %>" data-formation-type="<%= formation.css_title %>"><%= formation.title %></button></li>
      <% end %>
    </ul>
  </div>

  <div class="popular-user-post-image-title">
    <p>人気のある画像</p>
  </div>
  <% @images.each do |image| %>
    <div class="user-post-image-question"><%= @question_to_title[image.question_id] %>ベストイレブン</div>
    <div style="position:relative;">
      <%= image_tag(@image_host + image.image_name, class: 'user-post-image') %>
      <button class="btn-point" data-image-id="<%= image.id %>" disabled><span class="point-value"><%= image.point %></span> Good</button>
    </div>
    <% if image.comment && image.comment.length > 0 %>
      <div class="arrow_box"><%= image.comment %></div>
    <% end %>
  <% end %>

  <button type="button" class="btn btn-lg btn-success" onclick="location.href='<%= user_post_image_root_path %>'" style="margin-top: 8px;">最近投稿されたイレブン</button>
  <button type="button" class="btn btn-lg btn-success" onclick="location.href='<%= root_path %>'" style="margin-top: 5px;">トップページ</button>

  <%= render 'shared/footer_relative' %>
</div>
